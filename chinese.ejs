<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Chinese</title>
    <link rel="stylesheet" href="assets/chinese.css"> 
</head>
<link rel="preconnect" href="https://fonts.googleapis.com">
<link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
<link href="https://fonts.googleapis.com/css2?family=Poppins:ital,wght@0,100;0,200;0,300;0,400;0,500;0,600;0,700;0,800;0,900;1,100;1,200;1,300;1,400;1,500;1,600;1,700;1,800;1,900&display=swap" rel="stylesheet">

<body>
  
    <!-- <table border="1" width="50%"> -->
        <table >
        <h1 id="omkar">Find your perfect pick!!</h1>
        <tr>
            <!-- <th class="a">Id</th> -->
            <th class="c">Product Name</th>
            <th class="c">Del</th>
            <th class="c">No.</th>
            <th class="c">Add</th>
            <th class="c">Cost</th>
            
            
        </tr>

        <% if(products.length>0){ %>
            <% for(var i=0;i<products.length;i++){ %>
                <tr>
                    <!-- <td class="a"><%-products[i].product_id %></td> -->
                    <td id="b" class="p"><%-products[i].product_name %></td>
                    <td class="a" class="red" >
                        <a class="red" class="p"  href="/chinese_delete?id_chinese=<%-products[i].product_id %>">-</a>
                    </td>
                    <td  class="vegla"><%-Chinese_count[products[i].product_id] || Mycount %></td>
                    <td class="a" class="red">
                        <a class="red" class="p"  href="/add_chinese?id_chinese=<%-products[i].product_id %>&Chinese_name=<%-products[i].product_name %>">+</a>
                    </td>
                    <td id="b" class="p col"><%-products[i].cost %>â‚¹</td>
                    

                    
              </tr>
                        
                        
            <% } %>
        <% }else{  %>
            <h1>Data not found</h1>
        <% }  %>
    </table>
    <button id="Chinese_Home">Homepage</button>
    <button id="Back_to_cat">Back to Categories</button>
    <button id="cart">Cart</button>
    <script src="index.js"></script>
    <script>
         //For homepage link
      document.addEventListener('DOMContentLoaded', function() {
      const homeb = document.getElementById('Chinese_Home');

      homeb.addEventListener('click', function() {
      
        window.location.href = '/home';
      });
    });

    //For category link
document.addEventListener('DOMContentLoaded', function() {
    const homeb = document.getElementById('Back_to_cat');

    homeb.addEventListener('click', function() {
    
      window.location.href = '/newcategory';
    });
  });

  //For cart link
document.addEventListener('DOMContentLoaded', function() {
    const homeb = document.getElementById('cart');

    homeb.addEventListener('click', function() {
    
      window.location.href = '/Cart';
    });
  });


     
   
    </script>
</body>
</html>
                        